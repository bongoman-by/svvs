{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "ES2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ESNext",
      "dom",
      "ESNext.AsyncIterable"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@svvs/api-interfaces": [
        "libs/api-interfaces/src/index.ts"
      ],
      "@svvs/frontend/shared/data-access/root-store": [
        "libs/frontend/shared/data-access/root-store/src/index.ts"
      ],
      "@svvs/frontend/shared/data-access/user-store": [
        "libs/frontend/shared/data-access/user-store/src/index.ts"
      ],
      "@svvs/shared/data-access/interfaces": [
        "libs/shared/data-access/interfaces/src/index.ts"
      ],
      "@svvs/ui-component": [
        "libs/ui-component/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
